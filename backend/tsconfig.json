{
  "compilerOptions": {
    /* Diretórios */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Target para Node 20 */
    "target": "ES2020",
    "module": "CommonJS",

    /* Suporte para import/export modernos */
    "esModuleInterop": true,
    "moduleResolution": "Node",

    /* Tipagem */
    "strict": true,
    "skipLibCheck": true,

    /* Mapas de código (úteis para debug) */
    "sourceMap": true
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
